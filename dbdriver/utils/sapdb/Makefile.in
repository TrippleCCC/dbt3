# Makefile
# 20 february 2002

include @TOPDIR@/make.common

EXE = parse_query
UTIL_PRGS = main.c get_statement.c
UTIL_OBJS = $(UTIL_PRGS:.c=.so)

OBJS = $(UTIL_OBJS)
PRGS = $(UTIL_PRGS)

all: parse_query

parse_query: Makefile $(OBJS) $(INCLUDE_DIR)/common.h $(INCLUDE_DIR)/sapdb.h
	$(CC) -I$(INCLUDE_DIR) $(CFLAGS) -o $@ $(OBJS)

%.so:%.c
	$(CC) -c -shared -fpic $(CFLAGS) -o $@ $<

clean:
	rm -f parse_query *.so
	
explain:
	@echo "$(OBJS)"
