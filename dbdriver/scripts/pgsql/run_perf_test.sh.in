#!/bin/sh

if [ $# -ne 4 ]; then
        echo "Usage: ./run_perf_test.sh <scale_factor> <perf_run_number> <num_stream> <0/1 - explain analyze off/on>"
        exit
fi

scale_factor=$1
perf_run_num=$2
num_stream=$3
explain_analyze=$4
GTIME="@TOPDIR@/dbdriver/utils/gtime"
dbdriver_pgsql_path="@TOPDIR@/dbdriver/scripts/pgsql"

echo "`date`:=======performance test $perf_run_num========"
s_time=`$GTIME`
echo "insert into time_statistics (task_name, s_time, int_time) values ('PERF${perf_run_num}', current_timestamp, $s_time)"
psql -d $SID -U $PGUSER -c "insert into time_statistics (task_name, s_time, int_time) values ('PERF${perf_run_num}', current_timestamp, $s_time)"

#***run power test
$dbdriver_pgsql_path/run_power_test.sh $scale_factor $perf_run_num

#***run throughput test
$dbdriver_pgsql_path/run_throughput_test.sh $scale_factor $perf_run_num $num_stream $explain_analyze

echo "update time_statistics set e_time=current_timestamp where task_name='PERF${perf_run_num}' and int_time=$s_time"
psql -d $SID -U $PGUSER -c "update time_statistics set e_time=current_timestamp where task_name='PERF${perf_run_num}' and int_time=$s_time"
e_time=`$GTIME`
echo "`date`: end performance test run ${perf_run_num} "
let "diff_time=$e_time-$s_time"
echo "elapsed time for performance test ${perf_run_num} $diff_time"
