# dont start script as root!
id=`id | sed s/\(.*// | sed s/uid=//`

if [ "$id" = "0" ]; then
	echo "dont start script as root"
	exit 1
fi

db_param=$1

# Restart the database server with any given parameters.
bash @TOPDIR@/scripts/pgsql/stop_db.sh
bash @TOPDIR@/scripts/pgsql/start_db.sh "$db_param"

# since we are on STP, we can delete the database dir
if [ -d $PGDATA ]; then
	echo "======================================="
	echo "PGData directory $PGDATA already exists"
	echo "Skipping initdb"
	echo "======================================="

	# Don't need to initdb, blindly try to drop the dbt3 database in case
	# is exists.
	bash @TOPDIR@/scripts/pgsql/drop_db.sh
else
	# create directory where to put the database files
	mkdir -p $PGDATA

	# initialize database cluster
	echo "initializing database cluster..."
	@INITDB@ -D $PGDATA > /dev/null 2>&1
fi

echo "Creating database $SID..."
_o=`@CREATEDB@ $SID 2>&1`
_test=`echo $_o | grep CREATE`
if [ "$_test" = "" ]; then
	echo "@CREATEDB@ $SID failed: $_o $_test"
	exit 1
fi

exit 0
