DIR=`dirname $0`
. ${DIR}/pgsql_profile || exit 1

# dont start script as root!
id=`id | sed s/\(.*// | sed s/uid=//`

if [ "$id" = "0" ]; then
	echo "dont start script as root"
	exit 1
fi

OUTPUT_DIR="."
while getopts "l:o:p:" OPT; do
	case ${OPT} in
	l)
		DBPORT=${OPTARG}
		;;
	o)
		OUTPUT_DIR=${OPTARG}
		;;
	p)
		PARAMETERS=${OPTARG}
		;;
	esac
done

@TOPDIR@/scripts/pgsql/stop_db.sh

if [ -d $PGDATA ]; then
	echo "======================================="
	echo "PGData directory $PGDATA already exists"
	echo "Skipping initdb"
	echo "======================================="

	# Don't need to initdb, blindly try to drop the dbt3 database in case
	# it exists.
	@TOPDIR@/scripts/pgsql/start_db.sh -o ${OUTPUT_DIR} -p "$PARAMETERS" || exit 1
	@TOPDIR@/scripts/pgsql/drop_db.sh ${DBPORT}
else
	# initialize database cluster
	echo "initializing database cluster..."
	@INITDB@ -D $PGDATA || exit 1
fi

@TOPDIR@/scripts/pgsql/start_db.sh -o ${OUTPUT_DIR} -p "$PARAMETERS" || exit 1

echo "Creating database $SID..."
_o=`@CREATEDB@ -p ${DBPORT} $SID 2>&1`
_test=`echo $_o | grep CREATE`
if [ "$_test" = "" ]; then
	echo "@CREATEDB@ -p ${DBPORT} $SID failed: $_o $_test"
	exit 1
fi

exit 0
