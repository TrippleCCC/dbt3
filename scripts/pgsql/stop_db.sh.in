#!/bin/bash

DIR=`dirname $0`
. ${DIR}/pgsql_profile || exit

#
# We only need to stop the database if it's running.
# The sleeps are to make sure the database is shutdown.  I don't know of
# a better way to make sure it's down since 'wait' doesn't work in this
# case.
#
if [ -f ${PGDATA}/postmaster.pid ]; then
	sleep 60
	@PG_CTL@ -D ${PGDATA} stop ${1}
	sleep 60
fi
