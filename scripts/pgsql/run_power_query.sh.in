SRCDIR=@TOPDIR@

if [ $# -ne 4 ]; then
        echo "Usage: ./run_power_query.sh <scale_factor> <perf_run_number> <0/1 - explain analyze off/on> <run dir>"
        exit 1
fi

scale_factor=$1
perf_run_number=$2
explain_analyze=$3
OUTPUT_DIR=$4
RUNDIR=$OUTPUT_DIR/run

GTIME="$SRCDIR/dbdriver/utils/gtime"

qgen_dir="$SRCDIR/datagen/dbgen"
seed_file="$RUNDIR/seed"
query_file="$RUNDIR/power_query"
tmp_query_file="$RUNDIR/tmp_query.sql"
param_file="$RUNDIR/power_param"
parsequery_dir="$SRCDIR/dbdriver/utils"

if [ ! -f $seed_file ];
then
        echo "creating seed file $seed_file, you can change the seed by modifying this file"
	$SRCDIR/scripts/init_seed.sh > $seed_file
fi

#generate the queries for power test
rm -f $query_file
if [ $explain_analyze -eq 0 ]
then
	$qgen_dir/qgen -c -r `cat $seed_file` -p 0 -s $scale_factor -l $param_file> $query_file
else
	$qgen_dir/qgen -c -r `cat $seed_file` -p 0 -s $scale_factor -l $param_file -y > $query_file
fi
# modify $query_file so that the commands are in one line
$parsequery_dir/parse_query $query_file $tmp_query_file P $perf_run_number || exit 1

# run the queries
echo "`date`: Starting Power Test queries..."
s_time=`$GTIME`
@PSQL@ -d $SID -c "insert into time_statistics (task_name, s_time, int_time) values ('PERF${perf_run_number}.POWER.QS', current_timestamp, $s_time);" || exit 1
# You can't use -a and have the query redirected to a file with -o, so use -a
# and redirect.
@PSQL@ $SID -f $tmp_query_file -a >> $OUTPUT_DIR/results/power_query.result 2>&1 || exit 1
@PSQL@ -d $SID -c "update time_statistics set e_time=current_timestamp where task_name='PERF${perf_run_number}.POWER.QS' and int_time=$s_time;" || exit 1
e_time=`$GTIME`
echo "`date`: Power Test queries completed."
let "diff_time=$e_time-$s_time"
echo "Elapsed time for Power Test queries : $diff_time seconds"

exit 0
