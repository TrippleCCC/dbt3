. @TOPDIR@/scripts/dbt3_profile || exit 1

while getopts "l:n:" opt; do
	case $opt in
	l)
		DBPORT=${OPTARG}
		;;
	n)
		NAME=$OPTARG
		;;
	esac
done

s_time=`$GTIME`
SQL="
INSERT INTO time_statistics (task_name, s_time, int_time)
VALUES ('$NAME', current_timestamp, $s_time);
"
@PSQL@ -p ${DBPORT}-d ${SID} -c "${SQL}"
