. @TOPDIR@/scripts/dbt3_profile || exit 1

while getopts "l:n:" opt; do
	case $opt in
	l)
		DBPORT=${OPTARG}
		;;
	n)
		NAME=$OPTARG
		;;
	esac
done

SQL="
UPDATE time_statistics
SET e_time = current_timestamp
WHERE task_name = '$NAME';
"
@PSQL@ -p ${DBPORT} -d $SID -c "$SQL"
