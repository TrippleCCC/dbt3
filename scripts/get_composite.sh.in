FLAG_POWER_TEST=0
FLAG_THROUGHPUT_TEST=0
while getopts "23i:n:o:p:s:vz" OPT; do
	case ${OPT} in
	2)
		FLAG_POWER_TEST=1
		;;
	3)
		FLAG_THROUGHPUT_TEST=1
		;;
	i)
		INFILE=${OPTARG}
		;;
	n)
		STREAMS=${OPTARG}
		;;
	o)
		OUTFILE=${OPTARG}
		;;
	p)
		PERFNUM=${OPTARG}
		;;
	s)
		SCALE_FACTOR=${OPTARG}
		;;
	v)
		set -x
		SHELL="${SHELL} +x"
		;;
	z)
		NO_REFRESH_FLAG="-z"
		;;
	esac
done

SCRIPT_DIR="@TOPDIR@/scripts/@DATABASE_TO_USE@";

#
# Make sure the outfile is created.
#
touch ${OUTFILE}

if [ ${FLAG_POWER_TEST} -eq 1 ]; then
	POWER=`${SCRIPT_DIR}/get_power.pl -i ${INFILE} -p ${PERFNUM} -s ${SCALE_FACTOR} ${NO_REFRESH_FLAG}`
	echo "power = ${POWER}" >> ${OUTFILE}
fi

if [ ${FLAG_THROUGHPUT_TEST} -eq 1 ]; then
	THROUGHPUT=`${SHELL} ${SCRIPT_DIR}/get_throughput.sh -i ${INFILE} -p ${PERFNUM} -s ${SCALE_FACTOR} -n ${STREAMS}`
	echo "throughput = ${THROUGHPUT}" >> ${OUTFILE}
fi

if [ ${FLAG_POWER_TEST} -eq 1 ] && [ ${FLAG_THROUGHPUT_TEST} -eq 1 ]; then
	COMPOSITE=`echo "scale=2; sqrt(${POWER} * ${THROUGHPUT})" | bc -l`
	echo "composite = ${COMPOSITE}" >> ${OUTFILE}
fi

exit 0
