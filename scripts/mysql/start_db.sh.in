DIR=`dirname $0`
. ${DIR}/mysql_profile || exit 1

if ${MYSQL_ADMIN} ping >/dev/null 2>&1 ; then 
	echo "Database is already started."
	exit 0
fi

echo "Starting Database"
while getopts "p:" OPT ; do 
    case ${OPT} in
	p)
	    PARAMETERS=${OPTARG}
	    ;;
    esac
done

${MYSQLD_SAFE} @MYSQL_ENGINE_TUNING@ $PARAMETERS >/dev/null 2>&1 &
wait_for_pid created $!
exit $?



